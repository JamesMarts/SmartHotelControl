<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_hospital_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:paddingRight="8dp"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/tv_hospital_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_toast"
                    android:padding="5dp"
                    android:text="啊啊啊啊啊"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="啊啊啊啊啊"
                    android:textColor="@color/drawer_text"
                    android:textSize="18sp"
                    android:layout_alignBaseline="@+id/tv_hospital_level"
                    android:layout_alignBottom="@+id/tv_hospital_level"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>
            <TextView
                android:id="@+id/tv_hospital_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:text="啊啊啊啊啊"
                android:textColor="#cc222222"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_hospital_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="ffffffffffff"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>